---
// Add default values to prevent undefined
const {
  sunAngle = 0,
  shadowX = 0,
  shadowY = 0,
  shadowOpacity = "0.2",
} = Astro.props;

// Add console logging for debugging
console.log("NameWithSun Props:", {
  sunAngle,
  shadowX,
  shadowY,
  shadowOpacity,
});
---

<div class="name-container">
  <div class="sun-wrapper">
    <div
      class="sun"
      style={{
        transform: `translate(-50%, -50%) rotate(${sunAngle}deg) translateY(-40px)`,
        opacity: shadowOpacity,
      }}
    >
    </div>
  </div>
  <a
    class="name"
    href="/"
    style={{
      textShadow: `${shadowX}px ${shadowY}px 4px rgba(0, 0, 0, ${shadowOpacity})`,
    }}
  >
    Miller Bath
  </a>
</div>

<style>
  .name-container {
    position: relative;
    display: inline-block;
  }

  .sun-wrapper {
    position: absolute;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .sun {
    position: absolute;
    width: 12px;
    height: 12px;
    background: #ff7b4d;
    border-radius: 50%;
    box-shadow: 0 0 12px rgba(255, 90, 60, 0.5);
    left: 50%;
    top: 50%;
    will-change: transform, opacity;
  }

  .name {
    font-size: 2em;
    position: relative;
    z-index: 1;
    will-change: text-shadow;
  }

  .sun::after {
    content: "";
    position: absolute;
    inset: -2px;
    background: radial-gradient(
      circle,
      rgba(255, 123, 77, 0.3),
      transparent 70%
    );
    border-radius: 50%;
    animation: glow 3s infinite;
  }

  @keyframes glow {
    0%,
    100% {
      box-shadow: 0 0 12px rgba(255, 90, 60, 0.5);
    }
    50% {
      box-shadow: 0 0 18px rgba(255, 90, 60, 0.7);
    }
  }
</style>
